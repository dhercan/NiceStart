<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonflat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/Teal5</item>
        <item name="android:textSize">10pt</item>
        <item name="cornerRadius">8dp</item>
    </style >

    <style name="buttonoutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/Teal5</item>
        <item name="android:textColor">@color/Teal5</item>
        <item name="android:textSize">10pt</item>
        <item name="cornerRadius">8dp</item>

    </style>

    <style name="CajaInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:alpha">0.5</item>
    </style>
</resources>